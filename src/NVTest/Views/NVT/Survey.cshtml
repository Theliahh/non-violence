<link rel="stylesheet" href="~/css/survey.css" />

<div ng-controller="resultsController as vm">
    <form novalidate name="newResultForm" class="form-horizontal">
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <label for="age">Age</label>
                <input class="form-control" name="age" type="text" ng-model="vm.newresult.age" ng-pattern="vm.onlyNumbers" ng-maxlength="2"size="2" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 col-lg-offset-2">
                <label for="gender">Gender</label>
                <select class="form-control" name="gender" ng-model="vm.newresult.gender"
                        
                        ng-options="gender.name for gender in vm.genderOptions">
                    
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-info">Skip</button>
            </div>
        </div>
    </form>
</div>