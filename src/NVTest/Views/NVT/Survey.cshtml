<link rel="stylesheet" href="~/css/survey.css" />

<div ng-controller="resultsController as vm">
    <form novalidate name="newResultForm" class="form-horizontal" ng-submit="vm.addResult()">
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <label for="age">Age</label>
                <input class="form-control" name="age" type="text" ng-model="vm.newResult.age" ng-pattern="vm.onlyNumbers" ng-change="vm.checkAge()" required ng-maxlength="2" />
                <span ng-hide="vm.isAgeGood">Age must be between 13 and 99</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 col-lg-offset-2">
                <label for="gender">Gender</label>
                <select class="form-control" required name="gender" ng-model="vm.newResult.gender"
                        
                        ng-options="gender.name for gender in vm.genderOptions">
                    
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Reset</button>
                <button ng-disabled="newResultForm.$invalid || !vm.isAgeGood" type="submit" class="btn btn-primary">Submit</button>
                <button type="button" ng-click="vm.skipSurvey()" class="btn btn-info">Skip</button>
            </div>
        </div>
    </form>
</div>